@model IEnumerable<DewarpingApp.Domain.Models.ImageFile>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Devarping  app</title>
</head>
<body>
    <h3>Press the link below to upload your file</h3>
    <a asp-action="AddFile">Upload file</a><br />

    <h3>All files</h3>
    <table>
        <thead>
            <tr>
                <td>Name</td>
                <td>Path</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Path</td>
                    <td><a asp-action="MoreInfo" asp-route-id="@item.Id">More info</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>